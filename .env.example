# Edge Device Configuration
DEVICE_ID=12
SESSION_TIMEOUT=3
FIRMWARE_VERSION=1.8.2
MODEL_VERSION=yolov8n

# Camera Configuration
# El sistema intentará usar: Video file → RealSense → Cámara estándar
VIDEO_PATH=  # Ruta a video (mp4, avi, etc.) - dejar vacío para usar cámara en vivo
REALSENSE_WIDTH=640
REALSENSE_HEIGHT=480
REALSENSE_FPS=30
CAMERA_ID=0  # ID de cámara estándar si RealSense no está disponible (0 = default)
MAX_DETECTION_DISTANCE=500  # cm (5m)

# YOLO Configuration
YOLO_MODEL_PATH=models/yolov8m.pt
YOLO_CONFIDENCE=0.5
YOLO_IOU_THRESHOLD=0.45
YOLO_DEVICE=0  # "0" para GPU (CUDA), "cpu" para CPU

# Tracker Configuration
MAX_AGE=30
MIN_HITS=3
IOU_THRESHOLD=0.3

# API Configuration
API_URL=http://localhost:8000
API_TIMEOUT=10

# FastAPI Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB=person_tracking
MONGO_COLLECTION=sessions

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=session_events
KAFKA_CONSUMER_GROUP=session_processor

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123  # Puerto HTTP (9000 es para clickhouse-client)
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=analytics

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Display
SHOW_DISPLAY=false  # true para mostrar ventana con detecciones (útil para debugging)

# Security
API_KEY=your-secret-api-key-here
